extends layout

block content
  script(src="https://cdn.auth0.com/js/lock/10.0/lock.min.js")
  
  div(id="root" style="width: 280px; margin: 40px auto; padding: 10px;")

  
  script. 
    var lock = new Auth0Lock('#{env.AUTH0_CLIENT_ID}', '#{env.AUTH0_DOMAIN}',{ languageDictionary: {title: "Log me in"}, theme: {logo: 'https://vignette2.wikia.nocookie.net/galaxy4rblx/images/9/9f/LEGO_space_logo.png/revision/latest?cb=20130727015128', primaryColor: '#31324F'}, auth: {
          redirectUrl: '#{env.AUTH0_CALLBACK_URL}'
        , responseType: 'code'
        , params: {
          scope: 'openid name email picture'
        },
      }});
    lock.show();

